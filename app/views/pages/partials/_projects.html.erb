<% @projects.each do |post| %>
  <div class="col-sm-8 offset-sm-2  my-3">
    <div class="card home p-2 box">
      <div class="card-block">
        <h4 class="card-title blue">
          <strong>
            <%= post.title %>
            </strong>
          </h4>
        <hr class="my-3">
          <div class="container">
          <div class="row">
            <div class="col-md-12">
            <p>
            <%= post.short_description %>
            </p> 

             <small class="text-muted">
          Project by: 
          <strong>
            <em>
             <%= "#{post.user.first_name.capitalize!} #{post.user.last_name.capitalize!}" %>   
              </em> 
          </strong>
        </small>
              <%= is_approved?(post) %>
              </div>
          </div>
          </div>
       
        <a href="<%= show_project_path(post) %>" class="btn btn-block btn-outline-primary my-4">
          View project
        </a>

      </div>
    </div>
  </div>
  <% end %>